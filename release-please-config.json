{
    "include-component-in-tag": true,
    "include-v-in-tag": true,
    "tag-separator": "@",
    "separate-pull-requests": true,
    "pull-request-title-pattern": "{{component}}: release {{version}}", 
    "pull-request-header": "This is an automated PR to release a new version of the {{component}}", 
    "pull-request-footer": "When ready to release, please merge this PR. The release will be deployed automatically.",
    "packages": {
      "hello-x": {
        "path": "hello-x",
        "release-type": "python",
        "package-name": "hello-x"
      },
      "hello-y": {
        "path": "hello-y",
        "release-type": "python",
        "package-name": "hello-y"
      }
    },
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
  }